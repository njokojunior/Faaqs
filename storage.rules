rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Programme resources (PDFs, images)
    match /programmes/{programmeId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin(); // Only admins can upload
    }
    
    // User uploads (profile pictures, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Community attachments
    match /community/{postId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // General file size limit: 10MB
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
