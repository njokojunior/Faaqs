rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasActiveSubscription() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription.status == 'active';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Programmes collection - Public read, admin write
    match /programmes/{programmeId} {
      allow read: if true; // Everyone can view programmes
      allow write: if isAdmin();
    }
    
    // Quizzes collection - Public read, admin write
    match /quizzes/{quizId} {
      allow read: if true; // Everyone can view quizzes
      allow write: if isAdmin();
    }
    
    // User progress - Private to user
    match /users/{userId}/progress/{progressId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && hasActiveSubscription();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Community posts - Authenticated users can read/write
    match /community/{postId} {
      allow read: if true; // Public read
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.authorId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Subscriptions - Admin only
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Uploaded files metadata
    match /files/{fileId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
  }
}
